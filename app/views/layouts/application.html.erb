
<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Bookers</title>
  </head>

<body>
<div class="header">
<div class="container col-xs-12">
<div class="navbar navbar-inverse col-xs-12">
    <nav class="nav navbar-nav navbar-left text-muted">
      <h3>Bookers</h3>
    </nav>
  <nav>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

    <% if user_signed_in? %>

        <li class="">
        <%= link_to " Home",user_path(current_user.id),class: "home glyphicon glyphicon-home" %>
        </li>

        <li class="">
          <%= link_to " Users",users_path,class: "users glyphicon glyphicon-user" %>
        </li>

        <li class="">
          <%= link_to " Books",books_path,class: "books glyphicon glyphicon-book" %>
        </li>

        <li class="">
          <%= link_to " Logout",destroy_user_session_path, method: :delete, class: "logout glyphicon glyphicon-log-out" %>
        </li>

    <% else %>

        <li>
          <%= link_to " Home",top_path, class: "home glyphicon glyphicon-home" %>
        </li>

        <li>
          <%= link_to " About",books_about_path, class: "about glyphicon glyphicon-link" %>
        </li>

        <li>
        <%= link_to " Sign Up",new_user_registration_path,class: "sign_up glyphicon glyphicon-edit" %>
        </li>

        <li>
          <%= link_to " Log in",new_user_session_path,class: "sign_in glyphicon glyphicon-log-in" %>
        </li>
    <% end %>
  </ul>
</nav>
</div>
</div>
</div>

<%= yield %>

<footer class="footer style-2">
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc
        </p>
      </div>
    </div>
  </div>
</footer>

</body>
</html>