<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div class="container">
	<div class="row">

<%= render 'books/list', user: @user,book: @book_new %>


<div class="col-xs-9">
	<h1>Books detail</h1>
		<table class="table">
			<tbody>
				<tr>
					<td>
					<%= link_to user_path(@user.id) do %>
					<%= attachment_image_tag @user,:profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg", :size => "40x40" %>
					<% end %>
					</td>
					<td>
						<p>
						<%= @book.title %>
						</p>
					</td>
					<td>
						<p>
						<%= @book.opinion %>
						</p>
					</td>

					<% if @book.user == current_user %>
				<td><%= link_to "Edit", edit_book_path(@book),class:"edit_book_#{@book.id} btn-sm btn-success" %></td>

				<td><%= link_to "Destroy", book_path(@book),class:"destroy_book_#{@book.id} btn-sm btn-danger", method: :delete,data: { confirm: 'Are you sure?'} %></td>

				<% end %>

				</tr>
			</tbody>
		</table>
</div>

</div>
</div>
