<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div class="container">
	<div class="row">


		<%= render 'books/list',user: @user,book: @book %>


		<div class="col-xs-9">
		<h1>Books</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>User</th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to user_path(book.user_id),class:"user_#{@user.id}" do %>
					<%= attachment_image_tag book.user,:profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg", :size => "40x40" %>
					<% end %>
					</td>

				<td><%=link_to book.title,book_path(book.id),class:"book_#{book.id}" %></td>


				<td><%= book.opinion %></td>
			</tr>
			<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>