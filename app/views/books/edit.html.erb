<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1>Editing Book</h1>

			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
				<%= f.text_field :title,class:"col-xs-12 book_title" %>
			<h4>Opinion</h4>
				<%= f.text_area :opinion,class:"col-xs-12 book_body" %><br>

			<%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %><br>

			<%= link_to "Show", book_path(@book),class:"show_#{@book.id}" %>

			<%= link_to "Back",books_path,class:"back" %>

			<% end %>
		</div>
	</div>
</div>
