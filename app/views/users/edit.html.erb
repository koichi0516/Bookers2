<div class="container">
	<div class="row">


		<div class="col-xs-9">
		<h1>User info</h1>
			<% if @user.errors.any? %>
			<h2>ERROR!!</h2>
			<% end %>
		<%= form_for(@user) do |f| %>
		<div class="form-group has-icon">

			<label class="control-label sr-only">Name</label>
			<%= f.text_field :name, autofocus: true, class:"name", placeholder:"name" %>

			<div class="form-group has-icon">
				<div class="user-edit-image">
					<%= attachment_image_tag @user, :profile_image, :fill, 60,60, fallback: "no_image.jpg" %>
				</div>
				<label class="control-label sr-only">ProfileImage</label>
			<%= f.attachment_field :profile_image, class:"user_image", placeholder:"ProfileImage" %>
			</div>

			<label class="control-label sr-only">Introduction</label>
			<%= f.text_area :introduction, autofocus: true, class:"introduction" %><br>
			<%= f.submit "Update User", class:"" %>
			<% end %>

		</div>
		</div>
	</div>
</div>