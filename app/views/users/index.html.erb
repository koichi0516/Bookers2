<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div class="container">
	<div class="row">


		<%= render 'books/list',user: @user, book: @book %>


		<div class="col-xs-9">
		<h1>Users</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th>Show</th>
				</tr>
			</thead>
			<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user,:profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg", :size => "40x40" %></td>
				<td><%= user.name %></td>

				<td><%= link_to "Show",user_path(user.id),class:"user_#{user.id}" %></td>
			</tr>
			<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>